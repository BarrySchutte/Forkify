{
  "name": "forkify",
  "version": "1.0.0",
  "description": "Application for recipes",
  "main": "index.js",
  "scripts": {
    "dev": "webpack --mode development",
    "build": "webpack --mode production",
    "start": "webpack-dev-server --mode development --open",
    "watch:sass": "node-sass src/sass/main.scss dist/css/style.css -w",
    "devserver": "live-server",
    "serve": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "node-sass src/sass/main.scss dist/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" dist/css/style.comp.css -o dist/css/style.prefix.css",
    "compress:css": "node-sass dist/css/style.prefix.css dist/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BarrySchutte/Forkify.git"
  },
  "author": "Barry",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/BarrySchutte/Forkify/issues"
  },
  "homepage": "https://github.com/BarrySchutte/Forkify#readme",
  "dependencies": {},
  "devDependencies": {
    "autoprefixer": "^9.7.3",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.10.1"
  }
}
